<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ui.dashboard.DashboardFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_light"
        android:id="@+id/ll"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true">
<!--        <TextView-->
<!--            android:id="@+id/welcome"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/font2"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginTop="@android:dimen/app_icon_size"-->
<!--            android:textColor="#000000"-->
<!--            android:textSize="30sp" />-->




        <androidx.cardview.widget.CardView
            android:id="@+id/permission"
            android:layout_gravity="center"
            android:layout_width="350dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.15"
                android:src="@drawable/bg4"
                />
            <TextView
                android:id="@+id/personal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASK FOR PERMISSIONS TO ACCESS APPLICATIONS"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sub"/>
            <Button
                android:id="@+id/req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sub"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                android:text="REQUEST"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <!--  <TextView
                  android:id="@+id/appli_link"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="@string/fill"
                  android:textAlignment="center"
                  android:paddingTop="90dp"
                  android:textSize="20dp"
                  android:textColor="#FF0000ff"
                  android:fontFamily="@font/sub"/> -->
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/search"
            android:layout_gravity="center"
            android:layout_width="350dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.15"
                android:src="@drawable/bg5"
                />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW APPLICATION "
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sub"/>

            <Button
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sub"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                android:text="VIEW"
                android:clickable="false"
                android:alpha="0"
                android:enabled="false"
                android:textAlignment="center"
                android:textColor="@color/white"

                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/table2"
            android:layout_gravity="center"
            android:layout_width="350dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.15"
                android:src="@drawable/bg6"
                />

            <TextView
                android:id="@+id/table_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATUS UPDATE"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sub"/>

            <Button
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sub"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                android:text="UPDATE"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/table"
            android:layout_gravity="center"
            android:layout_width="350dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            card_view:cardCornerRadius="4dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alpha="0.15"
                android:src="@drawable/bg9"
                />

            <TextView
                android:id="@+id/tt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INTERVIEW TIMETABLE"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/sub"/>

            <Button
                android:id="@+id/ttbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/sub"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                android:text="CHECK"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>